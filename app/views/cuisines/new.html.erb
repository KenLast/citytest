<% provide(:title, 'New Cuisine type') %>
<h2><b>Create cuisine type</b></h2>

<div class="row">
  <div class="col-xs-12">
		<%= form_for(@cuisine, url: cuisines_path) do |f| %>
			<%= render 'shared/error_messages', object:f.object %>

			<div class="row">
				<div class="col-xs-12">

					<%= f.label :name %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-12">
					<%= f.submit "Create new cuisine type", class: "btn btn-primary" %>
				</div>
			</div>
			
		<% end %>
  </div>
</div>

